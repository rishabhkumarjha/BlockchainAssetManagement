<!doctype html>
<!doctype html>
<html class="no-js" lang="en" dir="ltr">
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insert Property Details</title>
    <link rel="stylesheet" href="css/icons/foundation-icons.css">
    <link rel="stylesheet" href="css/foundation.css">
    <link rel="stylesheet" href="css/app.css">
    <style>
      .spacer{height:500px;}
    </style>

</head>
  <body>

  	<div ><h1></h1></div>
  	<div class="row" style="width: 1000px;">
        <!-- CARD -->
        <div class="card" style="width: 1000px;">
          <div class="card-divider">
          	<div class = "large-6 medium-centered columns">
            	<h2>PROPERTY DETAILS</h2>
            </div>
          </div >

          <form action="/getPropertyDetails" method = "post">

          <div class = "columns medium-6">
          <label>Owner First Name</label>
          <input name = "fname" type="text" placeholder="First Name" required>
        </div>

        <div class = "columns medium-6">
          <label>Owner Last Name</label>
          <input name = "lname" type="text" placeholder="Last Name" required>
        </div>

        <div class = "columns medium-6">
          <label>Propery Id</label>
          <input class  = "target" name = "id" id = "id" type="text" placeholder="Property ID" required>
        </div>

        <div class = "columns medium-6">
          <label>Property Title</label>
          <input name = "title" type="text" placeholder="Property Title" required>
        </div>

        <div class = "columns medium-12">
          <label>Overview</label>
          <input name = "overview" type="text" />
        </div>

        <div class = "columns medium-6">
          <label>Type</label>
          <select name = "type" required>
  			<option value="1 BHK">1 BHK</option>
  			<option value="2 BHK">2 BHK</option>
  			<option value="3 BHK">3 BHK</option>
  			<option value="4 BHK">4 BHK</option>
  			<option value="1 RK">1 RK</option>
		  </select>
        </div>

        <div class = "columns medium-6">
          <label>Carpet Area (Sq.Ft.)</label>
          <input name= "area" type = "number" placeholder="Carpet Area (Sq.Ft.)" required>
        </div>

        <div class = "columns medium-6">
          <label>Rate Per Sq.Ft.</label>
          <input name = "rate" type = "number" placeholder="Rate Per Sq.Ft." required>
        </div>

        <div class = "columns medium-6">
          <label>Total Cost</label>
          <input name = "total" type = "number" placeholder="Total Cost" required>
        </div>

        <fieldset class="fieldset">
          <legend>Location</legend>
          <div class = "columns medium-4">
          	<label>Street</label>
          	<input name = "street" type="text" placeholder="Street" required>
          </div>
          <div class = "columns medium-4">
          	<label>City</label>
          	<input name = "city" type="text" placeholder="City" required>
          </div>
          <div class = "columns medium-4">
          	<label>State</label>
          	<input name = "state" type="text" placeholder="State" required>
          </div>
        </fieldset>


        <fieldset class="fieldset">
          <legend>Amenities</legend>
          <div class = "columns medium-3">
          	<label>24 Hr Water Supply</label>
          	<input name = "hour_water_supply" type="checkbox">
          </div>
          <div class = "columns medium-3">
          	<label>24 Hr Security</label>
          	<input name = "hour_security" type="checkbox">
          </div>
          <div class = "columns medium-3">
          	<label>Club House</label>
          	<input name = "club_house" type="checkbox">
          </div>

          <div class = "columns medium-3">
          	<label>Firefighting Equipment</label>
          	<input name = "fire_fighting_equipment" type="checkbox">
          </div>

          <div class = "columns medium-3">
          	<label>Kid's Play Area </label>
          	<input name = "kids_play_ground" type="checkbox">
          </div>
          <div class = "columns medium-3">
          	<label>Wifi Connectivity</label>
          	<input name = "Wifi_Connectivity" type="checkbox">
          </div>

          <div class = "columns medium-3">
          	<label>Meditation Center</label>
          	<input name = "Meditation_Center" type="checkbox">
          </div>

          <div class = "columns medium-3">
          	<label>Senior Citizen Park </label>
          	<input name = "Senior_Citizen_Park" type="checkbox">
          </div>
          <div class = "columns medium-3">
          	<label>Power Backup</label>
          	<input name = "Power_Backup" type="checkbox">
          </div>
          <div class = "columns medium-3">
          	<label>Jogging Amenities</label>
          	<input name = "Jogging_Amenities" type="checkbox">
          </div>

        </fieldset>



        <div class="columns medium-6">
        	<button id = "submitButton" class="button expanded large">Submit</button>
        </div>
    </form>


    </div>
    <div class="spacer"></div>
    <script src="js/vendor/jquery.js"></script>
    <script src="js/vendor/what-input.js"></script>
    <script src="js/vendor/foundation.js"></script>
     <script src="js/app1.js"></script>
   <script src="js/app.js"></script>


  </body>
 </html>
